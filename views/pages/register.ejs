<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/register.css">
<body>
   
    <div class="banner-area">
    
        <form class="content-area shadow p-3 mb-5 rounded" method="post" action="/register">
            <h1 class="text-white">Create an Account</h1>
            <hr style="border: 1px solid gray;">
            <div class="content text-white">
                <label for="fname" class="form-label">First Name</label>
                <input type="fname" class="form-control" id="fname" aria-describedby="fname" style="width: 300px;" name="fname" >
              </div>
              <div class="content text-white">
                <label for="lname" class="form-label">Last Name</label>
                <input type="lname" class="form-control" id="lname" aria-describedby="lname" style="width: 300px;" name="lname">
              </div>
          <div class="content text-white">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" aria-describedby="email" style="width: 300px;" name="email">
          </div>
          <div class="content text-white">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" style="width: 300px;" name="password">
          </div>
          <div class="content text-white">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" style="width: 300px;" name="confirmPassword">
          </div><br>
          <div class="registerButton text-center">
          <button type="submit" class="btn btn-info">Register</button>
        </div>
        <hr style="border: 1px solid rgb(163, 162, 162);">
          <div id="create-account">
            <p>Back to Login?<span style="margin-right: 150px;"></span><a href="/login">Login</a><p>
            <p><span style="margin-right: 95px;"></span><a href="/">Back To Home</a><p>
          </div>
          <!-- Display Errors -->
          <% if(typeof errors !='undefined'){ %>
            <% errors.forEach(error=>{ %>
                <p class="alert alert-danger" id="error"><%= error.message %></p>
            <% }) %>   
          <%}%>
        </form>
        </div>
            

</body>
</html>